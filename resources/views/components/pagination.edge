@if(collection.length > 0)
  <nav>
    <ul class="pagination">
      @each(anchor in collection.getUrlsForRange(collection.firstPage, collection.lastPage))
        <li class="page-item">
          <a href="{{ anchor.url }}" class="{{ anchor.isActive ? 'active': '' }}">
            {{ anchor.page }}
          </a>
        </li>
      @end
    </ul>
  </nav>
@endif
